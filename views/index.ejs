          <form class="form-inline my-2 my-lg-0" action="/buscar" method="POST" enctype="multipart/form-data" >
              <input class="form-control mr-sm-2" name="apellido" id="myInput" type="search" placeholder="Ingresar apellido" aria-label="Search">
