  <!-- Header -->
  <header class="masthead">
    <div class="container">
      <div class="intro-text">
        <!-- <div class="intro-lead-in">Cursos de programaci√≥n</div> -->
        <div class="intro-heading text-uppercase">Lista de contactos</div>
        <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#portfolio">Ver</a>
      </div>
    </div>
  </header>
  
  <!-- Portfolio Grid -->
  <section class="bg-light" id="portfolio">
    <div class="container">
      <div class="row">
        <% items.forEach(function(item){ %>
            <!-- Team member -->
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                    <div class="mainflip">
                        <div class="frontside">
                            <div class="card">
                                <div class="card-body text-center">
                                    <img class=" img-fluid" src='https://s3.us-east-2.amazonaws.com/agenda-bucket/<%=item.foto %>' alt="card image">
                                    <h4 class="card-title">
                                        <%= item.nombres %>
                                    </h4>
                                    <p class="card-text">
                                        <%= item.email %>
                                    </p>
                                    <p class="card-text">Ver mas</p>
                                    <a href="#" class="btn btn-primary btn-sm"><i class="fas fa-chevron-right"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="backside">
                            <div class="card">
                                <div class="card-body text-center mt-4">
                                    <h4 class="card-title">Datos Personales</h4>
                                    <ul class="text-justify" style="list-style: none;">
                                        <li><strong>Nombres:</strong>
                                            <%= item.nombres %>
                                        </li>
                                        <li><strong>Apellidos:</strong>
                                            <%= item.apellidos %>
                                        </li>
                                        <li><strong>Email:</strong>
                                            <%= item.email %>
                                        </li>
                                        <li><strong>Nacimento:</strong>
                                            <%= moment(item.nacimiento).format('DD-MM-YYYY'); %>
                                        </li>
                                    </ul>

                                    <ul class="list-inline">
                                        <li class="list-inline-item">

                                            <a class="btn btn-primary" href="/update/<%= item.usuario_id %>" style="color: aliceblue">
                                                <span style="color: aliceblue">Actualizar</span>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <form action="/delete" method="POST" enctype="multipart/form-data">
                                                <input type="hidden" name="usuario_id" value='<%= item.usuario_id %>'>
                                                <button type="submit" class="btn btn-danger" style="color: aliceblue">
                                                        <span style="color: aliceblue">Eliminar</span></button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
      </div>
    </div>
  </section>

  

  

  <!-- Footer -->
